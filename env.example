# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# WhatsApp Cloud API Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v15.0
WHATSAPP_PHONE_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# OpenAI Configuration (Required for Brand Content features)
OPENAI_API_KEY=your_openai_api_key

# OpenRouter (preferred for DeepSeek/Gemini/Wan) - Single key for all models
OPENROUTER_API_KEY=your_openrouter_api_key

# Optional model overrides (defaults shown in code)
# Text generation (DeepSeek free via OpenRouter): deepseek/deepseek-chat:free
AI_TEXT_MODEL=
# Image generation (Gemini 2.5 Flash via OpenRouter): google/gemini-2.5-flash-image-preview:free
# Alternative models: openai/dall-e-3, stability-ai/stable-diffusion-xl, midjourney/diffusion
AI_IMAGE_MODEL=
# Video generation (Wan 2.2 via OpenRouter): kunlun/wan-2.2
AI_VIDEO_MODEL=

# Composio Configuration (For AI Tool Calling & Automation)
COMPOSIO_API_KEY=your_composio_api_key 

# Telegram Bot Configuration (New Primary Platform)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook
TELEGRAM_WEBHOOK_TOKEN=your_webhook_verification_token